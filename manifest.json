{
  "manifest_version": 3,
  "name": "Slash Command AutoFill",
  "version": "1.0.2",
  "description": "Tự động điền dữ liệu vào ô input khi gõ '/'.",
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:8080/*",
    "https://qa.closetselector.com/*",
    "https://staging-ol.bid360app.com/*",
    "https://ol.bid360app.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost:8080/*",
        "https://qa.closetselector.com/*",
        "https://staging-ol.bid360app.com/*",
        "https://ol.bid360app.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "icons": {}
}